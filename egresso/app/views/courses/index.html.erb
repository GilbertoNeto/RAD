<p id="notice"><%= notice %></p>

<h1>Cursos - IFPB</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sigla</th>
      <th>Site</th>
      <th>Coordenador</th>
      <th>Matricula</th>
      <th>Senha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.nome %></td>
        <td><%= course.sigla %></td>
        <td><%= course.site %></td>
        <td><%= course.coordenador %></td>
        <td><%= course.matricula %></td>
        <td><%= course.senha %></td>
        <td><%= link_to 'Mais Informações', course %></td>
        <td><%= link_to 'Editar Curso', edit_course_path(course) %></td>
        <td><%= link_to 'Apagar Curso', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar Curso', new_course_path %>
